<hr /><table width="100%"><thead style="text-align:left;"><tr><th>Game Time</th><th colspan="2">Attending?</th></tr></thead><tbody><% for game in @games.order(:start_at) %><% unless game.start_at.past? %><tr><td><%= link_to game.start_at.strftime("%A, %B %e at %l:%M%p"), game %></td><% if game.games_users.where(:user_id => current_user.id).first.attending == nil %><td><%= button_to "Yes", attending_game_path(game), :class => "button" %></td><td><%= button_to "No", not_attending_game_path(game), :class => "button" %></td><% else %><td colspan="2"><%= game.games_users.where(:user_id => current_user.id).first.attending ? (button_to "Attending", not_attending_game_path(game), :title => "Click to change attendance", :alt => "Click to change attendance", :class => "button") : (button_to "Not Attending", attending_game_path(game), :title => "Click to change attendance", :alt => "Click to change attendance", :class => "button") %></td><% end %></tr><% end %><% end %></tbody></table>